<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="rootStackPane" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane fx:id="mainAnchorPane" maxHeight="155.0" maxWidth="935.0" minHeight="155.0" minWidth="935.0">

            <children>
                <VBox layoutX="750.0" layoutY="10.0" prefHeight="136.0" prefWidth="175.0" spacing="10.0"
                      AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="750.0" AnchorPane.rightAnchor="10.0"
                      AnchorPane.topAnchor="10.0">
                    <children>
                        <!--Here we'll have player_board.fxml-->
                        <TextArea fx:id="playerInfoTextArea" editable="false" opacity="0.4" prefHeight="97.0"
                                  prefWidth="175.0" promptText="Prompt" styleClass="playerInfoTextArea"
                                  text="Player info">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </TextArea>
                        <Label fx:id="pointsLabel" styleClass="playerInfoTextArea" text="Points: ">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <!--Here we have player board-->
            </children>

        </AnchorPane>
    </children>
</StackPane>
