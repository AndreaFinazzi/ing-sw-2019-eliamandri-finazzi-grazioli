<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane id="borderPane" fx:id="borderPane" prefHeight="523.0" prefWidth="750.0" styleClass="login-bp"
            stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.se.eliafinazzigrazioli.adrenaline.client.GUI.initializables.Login">
    <padding>
        <Insets bottom="50" left="50" right="50" top="10"/>
    </padding>

    <top>

    </top>

    <bottom>
        <StackPane fx:id="rootStackPane">
            <HBox id="credentials-box" alignment="BASELINE_LEFT" prefWidth="265">
                <GridPane id="gridPane" hgap="5" vgap="5" alignment="CENTER">
                    <padding>
                        <Insets left="10" top="5" right="10" bottom="5"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints maxWidth="200" minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="300" minWidth="50" prefWidth="200"/>
                    </columnConstraints>

                    <Label id="credentials-label" text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="Dialog" size="24"/>
                        </font>
                    </Label>
                    <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <HBox alignment="CENTER_RIGHT" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Button fx:id="buttonLogin" onAction="#performLogin" text="Login" prefWidth="100"/>
                    </HBox>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                </GridPane>
            </HBox>
        </StackPane>
    </bottom>
</BorderPane>
